-if @edu_program.present?
  =simple_form_for [@project.becomes(Project), @course] do |f|
    =f.error_notification
    =f.input :edu_program_id, as: :hidden, html: {value: @edu_program.id}
    .form-inputs
      =f.input :title, as: :string
      =f.input :lvl
      =f.input :profile_podgotovki
      =f.input :duration
      =f.input :desc
    .form-actions
      = f.button :submit, 'Сохранить'
      = link_to "Отмена", project_path(@project, anchor: 'edu_programs'), class: 'btn'
-else
  =simple_form_for [@project.becomes(Project), @course] do |f|
    =f.error_notification
    .form-inputs
      =f.input :title, as: :string
      =f.input :lvl
      =f.input :profile_podgotovki
      =f.input :duration
      =f.input :desc
    .form-actions
      = f.button :submit, 'Сохранить'
      = link_to "Отмена", project_path(@project, anchor: 'courses'), class: 'btn'